{
  "info": {
    "name": "Book Tracker API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"ramesh@email.com\",\n  \"password\": \"qazwsx\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/users/register",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "users",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "username",
              "value": "ramesh@email.com",
              "type": "text"
            },
            {
              "key": "password",
              "value": "qazwsx",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://127.0.0.1:8000/users/login",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "users",
            "login"
          ]
        }
      }
    },
    {
      "name": "Add Book",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"The Great Gatsby\",\n  \"author\": \"F. Scott Fitzgerald\",\n  \"status\": \"reading\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/books/",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "books",
            ""
          ]
        }
      }
    },
    {
      "name": "Get All Books",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/books/",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "books",
            ""
          ]
        }
      }
    },
    {
      "name": "Update Book",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"The Great Gatsby - Updated\",\n  \"author\": \"F. Scott Fitzgerald\",\n  \"status\": \"completed\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/books/{{book_id}}",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "books",
            "{{book_id}}"
          ]
        }
      }
    },
    {
      "name": "Delete Book",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://127.0.0.1:8000/books/{{book_id}}",
          "protocol": "http",
          "host": [
            "127.0.0.1"
          ],
          "port": "8000",
          "path": [
            "books",
            "{{book_id}}"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "book_id",
      "value": "your_book_id_here"
    }
  ]
}